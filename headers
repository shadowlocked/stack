jQuery(function($){
  var timerOut;
  
  $('.top-bar-menu li').on('mouseover', function(){
    clearTimeout(timerOut);
    var self = this;
    
      $('ul', self).show();
   
    
  }).on('mouseout', function() {
    var self = this;
   
      $('ul', self).hide();
   
    
  });


$( ".pps-btn" ).click(function() {
  $("#posturl").attr("value", window.url)
});



});

</script>

